 {{#section 'localCSS'}}
    <link rel="stylesheet" href="/css/navbar.css">
    <link rel="stylesheet" href="/css/categories.css">
{{/section}}


<div class="position-relative page">
    <div class="row container-fluid justify-content-between adjust-height">
        <h1 class="col-4 category-name"> <span id="category">{{category}}</span></h1>
    </div>

    <div class="posts">

        <div class="col container-fluid no-posts" hidden="true">
            <div class="row">
                <h1 id="no-posts-icon"></h1>
            </div>
            <div class="row">
                <h4>Looks like there's no posts for <span class="no-posts-name"></span> yet.</h4>
            </div>
        </div>

        {{#each posts}}
            {{> post-card}}
        {{/each}}

    </div>
    
</div>

{{#section 'JS'}}
        <!-- Bootstrap js -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" 
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        <script type="text/javascript" src="/js/nav-bar.js"></script>
        <script type="text/javascript" src="/js/categories.js"></script>
{{/section}}