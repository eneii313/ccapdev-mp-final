{{#section 'localCSS'}}
    <link rel="stylesheet" href="/css/navbar.css">
    <link rel="stylesheet" href="/css/categories.css">
{{/section}}

<div class="position-relative page">
    <div class="row container-fluid justify-content-between adjust-height">
        <h1 class="col-12 category-name" class="explore" style="color: #AD0000"><i class="fa fa-times"></i> Oops! An error occured.</h1>
    </div>

    <div class="posts">

        <div class="col container-fluid no-results">
            <div class="row">
                <h1><i class="fa fa-times"></i></h1>
            </div>
            {{#if error}}
            <div class="row"><h4>{{error}}</h4></div>
            {{else}}
            <div class="row"><h4>The page you were looking for could not be found.</h4></div>
            {{/if}}
        </div>

    </div>
    
</div>

{{#section 'JS'}}
    <!-- Bootstrap js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" 
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <!-- Owl Carousel js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
    <!-- Local JS -->
    <script type="text/javascript" src="/js/nav-bar.js"></script>
    <script type="text/javascript" src="/js/search.js"></script>
{{/section}}