 {{#section 'localCSS'}}
    <link rel="stylesheet" href="/css/navbar.css">
    <link rel="stylesheet" href="/css/users.css">
{{/section}}

<div class="position-relative page">
    
    <div class="col container-fluid adjust-height">
        
        <div class="row-auto container edit-account">
            <h1 class="col-auto my-auto"><i class="fa fa-cogs"></i> Account Settings</h1>
            <hr>
        </div>

        <form class="row container-fluid profile" action="/updateProfile" method="POST" enctype="multipart/form-data">

            <input type="hidden" name="username" value="{{user.username}}"></input>

            <div class="col-4 user-details">
                <img id="avatar-pic" class="row avatar" name="image" src="{{profilePic}}">

                <!-- Upload Image -->
                <div class="row-auto d-flex justify-content-center">
                    <label id="label-avatar" for="upload-avatar"><i class="fa fa-camera"></i> Change Profile Avatar</label>
                    <input type="file" id="upload-avatar" accept="image/*" name="image"></input>
                </div>

                <h3 class="row-auto username">{{user.username}}</h3>
                <h6 class="row-auto email">{{user.email}}</h6>
                <h6 class="row-auto">Joined on {{trimDate user.dateJoined "MMMM DD, YYYY"}}</h6>
                
            </div>
        
            <div class="col-6 my-auto user-desc">      
                <h6 class="row">Description: </h6>

                <textarea class="row" rows="6" cols="65" name="description">{{user.description}}</textarea>
                <div class="break"></div>

                <button class="col" type="submit" id="save-account">Save Changes</button>
                <a class="col" id="cancel" href="/users/{{user.username}}">Cancel</a>

                <div class="break"></div>
            </div>
        </form>

        <div class="row my-auto container justify-content-end">
            <div class="col-auto">
                <button id="delete" data-bs-toggle="modal" data-bs-target="#delete-modal">Delete Account</button>
            </div>
        </div>
        
    </div>
    
    <div class="break"></div>

</div>


<div id="delete-modal" class="modal fade" tabIndex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="delete-header">We're sad to see you go</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <p>Once you delete your account, your profile, posts, and comments will be removed from DiscoverLAGUNA.</p>
                <form id="verify-password" class="container-fluid" action="/deleteAccount/{{user.username}}" method="POST">

                     <input type="hidden" name="username" id="password-username" value="{{user.username}}"></input>

                    <div class="row">
                        <label class="col col-md-auto" for="password">Password</label>
                        <p id="error-password" class="col"></p>
                        <input type="password" class="form-control form-control-sm" id="password" name="password" placeholder="Enter new password">
                    </div>

                    <div class="row">
                        <label class="col col-md-auto" for="confirm-password">Confirm Password</label>
                        <p id="error-confirm-password" class="col"></p>
                        <input type="password" class="form-control form-control-sm" id="confirm-password" name="confirm" placeholder="Confirm new password">
                    </div>

                    <br/>

                    <div class="row">
                        <input class="col-auto my-auto" id="understand" type="checkbox">
                        <p class="col" style="margin: 0">I understand that deleted accounts are not recoverable.</p>
                    </div>

                    <div class="break"></div>

                    <div class="row">
                        <div class="col-auto">
                            <button type="submit" id="delete-confirm" disabled="true">Delete</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

